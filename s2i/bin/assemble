#!/bin/sh -e
#
# S2I assemble script for the 'hugo-alpine3' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'hugo-alpine3' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  shopt -s dotglob
  mv /tmp/artifacts/* ./
  shopt -u dotglob
fi

echo "---> Moving application source..."
mv /tmp/src /opt/hugo/

echo "---> Building application from source..."
# TODO: Add build steps for your application, eg npm install, bundle install, pip install, etc.

if [ -z $HUGO_DEPLOY_OPTIONS ]
then
    export HUGO_DEPLOY_OPTIONS="
    --source /opt/hugo/src \
    --buildDrafts \
    --buildExpired \
    --buildFuture \
    --destination /tmp/hugo-public \
    --ignoreCache \
    --verbose \
    --log \
    --debug \
    --verboseLog \
    --path-warnings \
    --minify \
    --noTimes \
    --print-mem"
fi

hugo --baseURL=${HUGO_BASE_URL} ${HUGO_DEPLOY_OPTIONS}
# rm -rf /tmp/hugo-cache/*
chmod -R og+rwx /tmp/hugo-cache
# rm -rf /tmp/hugo_cache
chmod -R og+rwx /tmp/hugo_cache
chmod -R og+rwx /tmp/hugo-public